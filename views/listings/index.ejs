<% layout("/layouts/boilerplate") %>  
 <body>
   <%= success %>

   <style>
  /* FILTER SECTION */
  #filters {
    display: flex;
    flex-wrap: wrap;              /* allows merging */
    align-items: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .filters {
    text-align: center;
    opacity: 0.7;
    min-width: 80px;
  }

  .filters:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filters p {
    font-size: 0.8rem;
    margin-bottom: 0;
  }

  .taxInfo {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    padding: 0.6rem;
  }

  /* MOBILE VIEW */
  @media (max-width: 768px) {

    #filters {
      justify-content: center;
    }

    .filters {
      flex: 1 1 30%;     /* 3 per row */
    }

    .tax-toggle {
      width: 100%;
      margin-top: 1rem;
      text-align: center;
    }
  }

  @media (max-width: 480px) {

    .filters {
      flex: 1 1 45%;     /* 2 per row on very small screens */
    }
  }

  @media (max-width: 992px) {
  #filters .filters:nth-child(n+8) {
    display: none;
  }
}

/* Small screen (mobile) */
@media (max-width: 576px) {
  #filters .filters:nth-child(n+5) {
    display: none;
  }
}

  .card-img-top {
    height: 17rem;
    object-fit: cover;
  }
</style>

   <div id="filters">
    <div class="filters">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filters">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filters">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic city</p>
    </div> 
    <div class="filters">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountain</p>
    </div>
    <div class="filters">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filters">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing pools</p>
    </div>
    <div class="filters">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
  
    <div class="filters">
      <div><i class="fa-brands fa-cow"></i></div>
      <p>  &nbsp;&nbsp;&nbsp;Farms</p>
    </div>
    <div class="filters">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>  &nbsp;&nbsp;&nbsp;Arctic</p>
    </div>
    <div class="filters">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>&nbsp;&nbsp;&nbsp;Domes</p>
    </div><div class="filters">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>&nbsp;&nbsp;&nbsp;Boats</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
         <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
         <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
      </div>
    </div>
    
   </div>
     
      <div class="row row-col-lg-3 row-col-md-2 row-col-sm-1 mt-3">
         <%for(let listing of allListing){ %>

               <div class="card listing-card" style="width: 20rem">
                  <a href="/listings/<%= listing._id %>" class="listing-link">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 17rem"/>
                    
                    <div class="card-img-overlay"></div>
                  <div class="card-body">
                   <p class="card-text">
                     <b><%= listing.title %></b> <br>
                     &#8377;  <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/ night
                     <i class = "taxInfo">&nbsp;&nbsp;+18% gst</i>
                   </p>

                </div>
                  </a>
               </div>
      
            
      

         <%} %>
      </div>
   
</body>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () =>{
    let taxInfo = document.getElementsByClassName("taxInfo");
   for( info of taxInfo){
    if(info.style.display != "inline"){
      info.style.display = "inline";
    } else {
      info.style.display = "none";
    }
   }
  });
</script>